  @keyframes fallFromLeft {
    0% {
      left: -200px;
      top: 0;
      opacity: 0;
      transform: rotate(-30deg);
    }
    70% {
      opacity: 1;
      left: 50px;
      top: 300px;
      transform: rotate(10deg);
    }
    100% {
      left: 50px;
      top: 350px;
      transform: rotate(0deg);
    }
  }

  /* Animația pentru poza care vine din dreapta și cade */
  @keyframes fallFromRight {
    0% {
      right: -200px;
      top: 0;
      opacity: 0;
      transform: rotate(30deg);
    }
    70% {
      opacity: 1;
      right: 50px;
      top: 300px;
      transform: rotate(-10deg);
    }
    100% {
      right: 50px;
      top: 350px;
      transform: rotate(0deg);
    }
  }

  .img-left {
    animation: fallFromLeft 3s ease forwards;
  }

  .img-right {
    animation: fallFromRight 3s ease forwards;
  }
